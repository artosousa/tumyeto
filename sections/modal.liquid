{% schema %}
{
  "name": "Modal Popup",
  "tag": "section",
  "class": "modal-popup-section",
  "settings": [
    {
      "type": "image_picker",
      "id": "popup_image",
      "label": "Popup Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "message",
      "label": "Message"
    },
    {
      "type": "select",
      "id": "theme",
      "label": "Modal Theme",
      "default": "white",
      "options": [
        { "value": "white", "label": "Light" },
        { "value": "dark", "label": "Dark" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Modal Popup"
    }
  ]
}
{% endschema %}

{% assign modal_theme = section.settings.theme %}

<div id="modalPopup" class="modal-popup {{ modal_theme }}" style="display: none;">
  <div class="modal-popup-content">
    <span class="modal-popup-close">&times;</span>

    {% if section.settings.popup_image %}
      <img 
        src="{{ section.settings.popup_image | image_url: width: 600 }}" 
        alt="Popup Image" 
        width="{{ section.settings.popup_image.width }}"
        height="{{ section.settings.popup_image.height }}"
        style="max-width: 100%; height: auto; margin-bottom: 1rem;" />
    {% endif %}
    {% if section.settings.heading %}
        <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    {% if section.settings.message %}
         <p>{{ section.settings.message }}</p>
    {% endif %}
   
  </div>
</div>

<style>
  .modal-popup {
    position: fixed;
    z-index: 10000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.6);
  }

  .modal-popup-content {
    padding: 30px;
    border-radius: 10px;
    width: 90%;
    max-width: 500px;
    position: relative;
    text-align: center;
    background-color: white;
    color: black;
    left: 50%;
    top: 50%;
    transform: translateX(-50%) translateY(-50%);
  }

  .modal-popup-close {
    position: absolute;
    top: 10px;
    right: 15px;
    font-size: 26px;
    cursor: pointer;
    color: black;
  }

  /* Dark Theme Styles */
  .modal-popup.dark .modal-popup-content {
    background-color: #000;
    color: white;
  }

  .modal-popup.dark .modal-popup-close {
    color: white;
  }

  /* Light Theme Styles */
  .modal-popup.white .modal-popup-content {
    background-color: white;
    color: black;
  }

  .modal-popup.white .modal-popup-close {
    color: black;
  }
</style>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    if (!localStorage.getItem("modalShown")) {
      const modal = document.getElementById("modalPopup");
      const close = document.querySelector(".modal-popup-close");

      modal.style.display = "block";
      localStorage.setItem("modalShown", "true");

      close.onclick = function() {
        modal.style.display = "none";
      }

      window.onclick = function(event) {
        if (event.target == modal) {
          modal.style.display = "none";
        }
      }
    }
  });
</script>
